<span n:class="selectBox, $count == 0 ? disabled" data-name="{$column}" {ifset $toggle}data-toggle="{$toggle}"{/ifset}>
        <span class="selectBox-text" data-default="{$name}">{$name}</span>
        <ul n:if="$count > 0">
            <li n:ifset="$first" data-id="" class="irrelevant">({$first})</li>
            <li n:foreach="$rows as $key => $row"
                    data-id="{ifset $row->id}{$row->id}{else}{$key}{/ifset}">{ifset $row->name}{$row->name}{else}{$row}{/ifset}</li>
        </ul>
</span>